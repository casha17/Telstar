@page
@model Telstar.Pages.ChooseRouteModel
@{
}
<center>
    <h5 class="card-title">Choose Route Page</h5>
</center>
<div class="chooseRouteContainer">
    <div class="card" style="width: 18rem; margin:20px">
        <Center style="padding:20px">
            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" style="margin:20px" fill="currentColor" class="bi bi-fast-forward-fill" viewBox="0 0 16 16">
                <path d="M7.596 7.304a.802.802 0 0 1 0 1.392l-6.363 3.692C.713 12.69 0 12.345 0 11.692V4.308c0-.653.713-.998 1.233-.696l6.363 3.692Z" />
