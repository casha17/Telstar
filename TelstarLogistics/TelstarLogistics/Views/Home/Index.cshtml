@{
    ViewData["Title"] = "Home Page";
}


<h5 class="card-title">Enter Information Page</h5>
<div class="row align-items-start spacer">
    <div class="col">
        <h6 st>From:</h6>
        <select class="form-select" aria-label="Default select example">
            <option selected>Select from destination</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
        <div style="padding-top:20px">
            <h6>Select date of sending parcel:</h6>
            <input style="width:100%" type="date" id="start" name="trip-start"
                   value="2018-07-22"
                   min="2018-01-01" max="2018-12-31">
        </div>
        <div style="padding-top:20px">
            <h6>View map:</h6>
            <img src="img\map.png" style="width:400px; padding-left:100px">
        </div>
        <button type="button" class="btn btn-warning spacer">Continue</button>
    </div>
    <div class="col-md-auto spacer">
        >
    </div>
    <div class="col">
        <h6>To:</h6>
        <select class="form-select" aria-label="Default select example">
            <option selected>Select to destination</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
        <div class="card spacer ">
            <div class="card-body">
                <h6>Select parcel type</h6>
                <div class="form-check spacer">
                    <input class="form-check-input"  type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                        Regular parcel
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        Refrigerated parcel
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                    <label class="form-check-label" for="exampleRadios3">
                        Fragile parcel
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="option4">
                    <label class="form-check-label" for="exampleRadios4">
                        Animal parcel
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

